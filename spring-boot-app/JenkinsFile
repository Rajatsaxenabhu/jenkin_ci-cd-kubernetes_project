pipeline {
    agent {
        docker {
            image 'saxenarajat499/jenkin-docker-mavin-fedora:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // Mount Docker socket to access the host's Docker daemon
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Display a message and checkout the repository
                sh 'echo passed'
                git branch: 'main', url: 'https://github.com/Rajatsaxenabhu/jenkin_ci-cd-kubernetes_project.git'
            }
        }
        
        stage('Build and Test') {
            steps {
                // List files and then build the project with Maven
                sh 'ls -ltr'
                sh 'cd jenkin_ci-cd-kubernetes_project/spring-boot-app && mvn clean package'
            }
        }
        
        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "saxenarajat499/ultimate-cicd:${BUILD_NUMBER}"
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {
                    // Build and push the Docker image
                    sh 'cd jenkin_ci-cd-kubernetes_project/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        dockerImage.push()
                    }
                }
            }
        }
        
        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "jenkin_ci-cd-kubernetes_project"
                GIT_USER_NAME = "saxenarajatbhu"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    // Update the deployment file with the new image tag and push changes to GitHub
                    sh '''
                        git config user.email "saxenarajat.xyz@gmail.com"
                        git config user.name "Rajat Saxena"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" jenkin_ci-cd-kubernetes_project/spring-boot-app-manifests/deployment.yml
                        git add jenkin_ci-cd-kubernetes_project/spring-boot-app-manifests/deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }
    }
}
